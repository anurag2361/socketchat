<!DOCTYPE <html>
<html lang="en">

<head>
    <% include ./parts/head.ejs %>
</head>

<body>
    <% include ./parts/header.ejs %>
        <main>
            <div class="jumbotron" style="margin:auto;margin-top:3%;width:50%">
                <br>
                <p><b>Sign Up</b></p>
                <br>
                <form class="signup" action="/user/api/v1/signup" method="post">
                    <p id="error1"></p>
                    <div class="inputblock">
                        <p>Username:</p>
                        <input id="uname" class="inputbox" type="text" name="username" placeholder="Username" autofocus autocomplete="off" required/>
                        <span id="ik" class="glyphicon glyphicon-ok"></span>
                        <span id="ir" class="glyphicon glyphicon-remove"></span>
                    </div>
                    <div class="inputblock">
                        <p>Password:</p>
                        <input id="pass" class="inputbox" type="password" name="password" placeholder="Password" required/>
                        <span id="ik2" class="glyphicon glyphicon-ok"></span>
                        <span id="ir2" class="glyphicon glyphicon-remove"></span>
                    </div>
                    <div class="inputblock">
                        <p>Email:</p>
                        <input id="email" class="inputbox" type="email" name="email" placeholder="Email" autocomplete="off" required/>
                        <span id="ik1" class="glyphicon glyphicon-ok"></span>
                        <span id="ir1" class="glyphicon glyphicon-remove"></span>
                    </div>
                    <br>
                    <button class="btn btn-primary btn-block btn-lg" type="submit" name="submit">Signup</button><br>
                    <p><b>Have an account?</b></p>
                    <a href="/user/login" class="btn btn-danger btn-lg btn-block"><b>Login</b></a><br>
                </form>
            </div>
        </main>
        <script src="/js/Signupscript.js"></script>
        <script src="/js/jquery-3.1.1.min.js"></script>
        <script src="/js/bootstrap.min.js"></script>
        <script src="/js/moment.min.js"></script>
        <script src="/js/socket.io-1.7.3.js"></script>
</body>


</html>