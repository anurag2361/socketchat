<!DOCTYPE <html>
<html lang="en">

<head>
    <% include ./parts/head.ejs %>
</head>

<body>
    <% include ./parts/header.ejs %>
        <main>
            <main>
                <div class="loginbox">
                    <br>
                    <p><b>Sign In</b></p>
                    <br>
                    <form class="loginform" action="/user/api/v1/login" method="post">
                        <div class="inputblock">
                            <input class="inputbox" type="email" name="email" placeholder="Email" autofocus required/>
                        </div>
                        <div class="inputblock">
                            <input class="inputbox" type="password" name="password" placeholder="Password" required/>
                        </div>
                        <button class="btn btn-success btn-lg btn-block" type="submit" name="submit">Login</button><br>
                        <p><b>Don't have an account?</b></p>
                        <a href="/user/signup" class="btn btn-danger btn-lg btn-block"><b>Sign Up Here</b></a><br>
                    </form>
                </div>
            </main>
            <script src="/js/jquery-3.1.1.min.js"></script>
            <script src="/js/bootstrap.min.js"></script>
            <script src="/js/moment.min.js"></script>
            <script src="/js/socket.io-1.7.3.js"></script>
</body>

</html>